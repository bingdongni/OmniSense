# Environment configuration
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=logs/omnisense.log

# Database
SQLITE_PATH=data/omnisense.db
CHROMA_PATH=data/chroma
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=omnisense
MINIO_SECURE=false

# Proxy (optional)
PROXY_ENABLED=false
HTTP_PROXY=
HTTPS_PROXY=
PROXY_POOL_ENABLED=false
PROXY_POOL_URL=

# Anti-crawl
USER_AGENT_ROTATION=true
FINGERPRINT_RANDOM=true
CAPTCHA_SERVICE=
CAPTCHA_API_KEY=
REQUEST_DELAY_MIN=1.0
REQUEST_DELAY_MAX=5.0
MAX_RETRIES=3

# Spider
CONCURRENT_TASKS=5
TIMEOUT=30
DOWNLOAD_MEDIA=true
MAX_MEDIA_SIZE=104857600
COOKIE_PERSIST=true

# Matcher
SIMILARITY_THRESHOLD=0.85
BERT_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
USE_GPU=false
VECTOR_DIM=384

# Analysis
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment
LANGUAGE_DETECTION=true

# Agent
LLM_PROVIDER=ollama
LLM_MODEL=qwen2.5:7b
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
OLLAMA_BASE_URL=http://localhost:11434
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Cookie Management
COOKIE__STORAGE_PATH=data/cookies
COOKIE__AUTO_REFRESH=true
COOKIE__ENCRYPT=false
COOKIE__VALIDATION_ENABLED=true
COOKIE__POOL_ENABLED=true

# API Configuration
API__CREDENTIALS_PATH=data/api_credentials.json
API__PREFER_API=true
API__FALLBACK_TO_SCRAPING=true
API__ENABLE_RATE_LIMIT=true
API__DEFAULT_RATE_LIMIT=60

# GitHub API (获取: https://github.com/settings/tokens)
API__GITHUB_TOKEN=
API__GITHUB_RATE_LIMIT=5000

# Twitter API (获取: https://developer.twitter.com)
API__TWITTER_BEARER_TOKEN=
API__TWITTER_API_KEY=
API__TWITTER_API_SECRET=
API__TWITTER_ACCESS_TOKEN=
API__TWITTER_ACCESS_SECRET=

# Reddit API (获取: https://www.reddit.com/prefs/apps)
API__REDDIT_CLIENT_ID=
API__REDDIT_CLIENT_SECRET=
API__REDDIT_USER_AGENT=OmniSense/1.0

# YouTube Data API (获取: https://console.cloud.google.com)
API__YOUTUBE_API_KEY=
API__YOUTUBE_QUOTA_LIMIT=10000

# Google Scholar (通过SerpAPI)
API__SERPAPI_KEY=

# 微信公众号 API
API__WECHAT_APP_ID=
API__WECHAT_APP_SECRET=

# 抖音开放平台 (获取: https://open.douyin.com)
API__DOUYIN_CLIENT_KEY=
API__DOUYIN_CLIENT_SECRET=

# 京东API (获取: https://open.jd.com)
API__JD_APP_KEY=
API__JD_APP_SECRET=

# 淘宝/天猫API (获取: https://open.taobao.com)
API__TAOBAO_APP_KEY=
API__TAOBAO_APP_SECRET=
